# ============================================================================
# Ghostty Configuration
# ============================================================================
# Reload config: Ctrl+X > R

# ============================================================================
# THEME & COLORS
# ============================================================================
theme = Catppuccin Mocha
bold-is-bright = true

# Background Effects
background-opacity = 0.95
background-blur-radius = 20

# ============================================================================
# FONTS
# ============================================================================
font-family = Maple Mono NF CN
font-size = 18
font-feature = +liga
font-feature = +calt

# ============================================================================
# WINDOW & VISUAL
# ============================================================================
window-padding-x = 8
window-padding-y = 8
window-save-state = always
unfocused-split-opacity = 0.7
resize-overlay = always

# ============================================================================
# CURSOR
# ============================================================================
cursor-color = #b4befe
cursor-text = #1e1e2e
cursor-style = block
cursor-style-blink = false

# ============================================================================
# SHELL INTEGRATION
# ============================================================================
shell-integration-features = sudo,title,no-cursor,ssh-terminfo,ssh-env

# ============================================================================
# BEHAVIOR
# ============================================================================
scrollback-limit = 1000000
mouse-hide-while-typing = true
confirm-close-surface = true
desktop-notifications = true

# ============================================================================
# CLIPBOARD
# ============================================================================
clipboard-read = allow
clipboard-write = allow
copy-on-select = clipboard

# ============================================================================
# macOS SPECIFIC
# ============================================================================
macos-titlebar-style = tabs

# ============================================================================
# KEYBINDINGS
# ============================================================================

# --- Split Navigation (vim-style) ---
keybind = performable:ctrl+h=goto_split:left
keybind = performable:ctrl+k=goto_split:top
keybind = performable:ctrl+j=goto_split:bottom
keybind = performable:ctrl+l=goto_split:right

# --- Split Management ---
keybind = ctrl+x>h=new_split:left
keybind = ctrl+x>j=new_split:down
keybind = ctrl+x>k=new_split:up
keybind = ctrl+x>l=new_split:right
keybind = ctrl+x>z=toggle_split_zoom
keybind = ctrl+x>q=close_surface
keybind = ctrl+x>equal=equalize_splits

# --- Split Resizing ---
keybind = ctrl+x>shift+h=resize_split:left,20
keybind = ctrl+x>shift+j=resize_split:down,20
keybind = ctrl+x>shift+k=resize_split:up,20
keybind = ctrl+x>shift+l=resize_split:right,20

# --- Tab Management ---
keybind = ctrl+x>c=new_tab
keybind = ctrl+x>1=goto_tab:1
keybind = ctrl+x>2=goto_tab:2
keybind = ctrl+x>3=goto_tab:3
keybind = ctrl+x>4=goto_tab:4
keybind = ctrl+x>5=goto_tab:5
keybind = ctrl+x>6=goto_tab:6
keybind = ctrl+x>7=goto_tab:7
keybind = ctrl+x>8=goto_tab:8
keybind = ctrl+x>9=goto_tab:9

# --- Utility Keybindings ---
keybind = global:cmd+backquote=toggle_quick_terminal
keybind = ctrl+shift+u=copy_url_to_clipboard
keybind = ctrl+x>r=reload_config

# ============================================================================
# SYSTEM
# ============================================================================
auto-update = download
